# Binance API Configuration
# Get your API keys from: https://testnet.binance.vision/

BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here

# Set to true to use testnet (recommended for testing)
BINANCE_TESTNET=true

# Set to true to enable sandbox mode
BINANCE_SANDBOX=true

# Deposit Test Configuration (Optional)
# Configure these values to test deposit address and history functionality
# NOTE: Deposit endpoints not available in testnet (SAPI limitation)

# Comma-separated list of coins to test for deposit addresses
# Example: BTC,ETH,USDT,BNB
TEST_DEPOSIT_COINS=BTC,ETH,USDT,BNB

# Comma-separated list of networks corresponding to the coins above
# Use "None" for default network, or pipe (|) to test multiple networks for one coin
# Example: None,None,ERC20|TRC20,BEP20 means:
#   - BTC with default network
#   - ETH with default network
#   - USDT with both ERC20 and TRC20
#   - BNB with BEP20
TEST_DEPOSIT_NETWORKS=None,None,ERC20|TRC20,BEP20

# Coin to check deposit history for
TEST_DEPOSIT_HISTORY_COIN=USDT

# Maximum number of deposit history records to retrieve
TEST_DEPOSIT_HISTORY_LIMIT=10

# Coin to test for deposit address consistency
TEST_DEPOSIT_CONSISTENCY_COIN=BTC

# Transfer Test Configuration (Optional)
# Configure these values to test withdrawal/transfer functionality
# Leave TEST_TRANSFER_ADDRESS empty to skip transfer tests

# Coin to transfer (e.g., USDT, BTC, ETH, BNB)
TEST_TRANSFER_COIN=USDT

# Network for transfer (e.g., BSC, ERC20, TRC20, BTC)
TEST_TRANSFER_NETWORK=BSC

# Amount to transfer (must be > 0 and <= available balance)
TEST_TRANSFER_AMOUNT=1.0

# Destination address for transfer test
# IMPORTANT: Use a valid testnet address for testnet mode
# Example: TEST_TRANSFER_ADDRESS=0x742d35Cc6634C0532925a3b844Bc9e7595f0bEb
TEST_TRANSFER_ADDRESS=your_destination_address_here
